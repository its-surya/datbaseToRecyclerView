<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        style="@style/llVerticalMatchMatch"
        android:gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                style="@style/llVerticalMatchMatch"
                android:gravity="center">

                <LinearLayout
                    style="@style/llVerticalMatchMatch"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30mdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <include layout="@layout/layout_company_logo" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/llVerticalMatchWrap"
                        android:layout_marginHorizontal="@dimen/_20mdp">

                        <TextView
                            style="@style/textViewStyleRegular"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_30mdp"
                            android:text="@string/login_with" />

                        <LinearLayout
                            style="@style/llVerticalMatchWrap"
                            android:layout_marginLeft="@dimen/_5mdp"
                            android:layout_marginTop="@dimen/_30mdp"
                            android:layout_marginRight="@dimen/_5mdp"
                            android:layout_marginBottom="@dimen/_5mdp"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnLoginWithMobile"
                                style="@style/ButtonStyle"
                                android:layout_width="@dimen/_150mdp"
                                android:text="@string/mobile" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                style="@style/dividerStyleHorizontal"
                                android:layout_marginTop="@dimen/_20mdp"
                                android:layout_marginBottom="@dimen/_20mdp"
                                android:layout_toLeftOf="@+id/txtOr" />

                            <TextView
                                android:id="@+id/txtOr"
                                style="@style/textViewStyleRegular"
                                android:layout_width="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@color/colorTransparent"
                                android:gravity="center"
                                android:paddingHorizontal="@dimen/_8mdp"
                                android:text="@string/str_or" />

                            <View
                                style="@style/dividerStyleHorizontal"
                                android:layout_marginTop="@dimen/_20mdp"
                                android:layout_marginBottom="@dimen/_20mdp"
                                android:layout_toRightOf="@+id/txtOr" />
                        </RelativeLayout>

                        <LinearLayout
                            style="@style/llVerticalMatchWrap"
                            android:layout_marginLeft="@dimen/_5mdp"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:layout_marginRight="@dimen/_5mdp"
                            android:layout_marginBottom="@dimen/_5mdp"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnEmail"
                                style="@style/ButtonStyle"
                                android:layout_width="@dimen/_150mdp"
                                android:text="@string/hint_email" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/textViewStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginVertical="@dimen/_10mdp"
                            android:background="@color/colorTransparent"
                            android:paddingHorizontal="@dimen/_8mdp"
                            android:text="@string/don_t_have_account" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewSignUp"
                            style="@style/textViewStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:paddingHorizontal="@dimen/_8mdp"
                            android:text="@string/sign_up" />
                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>