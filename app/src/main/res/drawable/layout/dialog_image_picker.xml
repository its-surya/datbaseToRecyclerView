<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCardBack"
        app:cardElevation="@dimen/_10mdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorCardBack"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTitleDialog"
                    style="@style/textViewStyleLarge"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/buttonBgColor"
                    android:gravity="center"
                    android:text="@string/select_media"
                    android:textColor="@color/buttonTextColor" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llImageCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_5mdp">

                <ImageView
                    style="@style/imageViewDialog"
                    android:src="@drawable/ic_camera_1" />

                <TextView
                    style="@style/textViewStyleLarge"
                    android:layout_marginLeft="@dimen/_5mdp"
                    android:padding="@dimen/_5mdp"
                    android:text="@string/camera" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llImageGallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_5mdp">

                <ImageView
                    style="@style/imageViewDialog"
                    android:src="@drawable/ic_gallery" />

                <TextView
                    style="@style/textViewStyleLarge"
                    android:layout_marginLeft="@dimen/_5mdp"
                    android:padding="@dimen/_5mdp"
                    android:text="@string/gallery" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llImagePDF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_5mdp">

                <ImageView
                    android:layout_width="@dimen/_30mdp"
                    android:layout_height="@dimen/_30mdp"
                    android:layout_marginStart="@dimen/_10mdp"
                    android:src="@drawable/ic_document" />

                <TextView
                    style="@style/textViewStyleLarge"
                    android:layout_marginLeft="@dimen/_5mdp"
                    android:padding="@dimen/_5mdp"
                    android:text="@string/document" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>