<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="isShowIntroSlider"
            type="Boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            style="@style/llVerticalMatchMatch"
            android:background="@color/white">





            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pagerIntro"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60mdp"
                android:layout_alignParentBottom="true"
                android:paddingTop="@dimen/_15mdp"
                android:paddingBottom="@dimen/_15mdp">

                <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                    android:id="@+id/wormDotsIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_16mdp"
                    android:layout_marginRight="@dimen/_16mdp"
                    app:dotsColor="@color/gray"
                    app:dotsCornerRadius="@dimen/_4mdp"
                    app:dotsSize="@dimen/_8mdp"
                    app:dotsSpacing="@dimen/_4mdp"
                    app:dotsWidthFactor="2.5"
                    app:progressMode="false"
                    app:selectedDotColor="@color/black" />


                <TextView
                    android:id="@+id/txtGetStarted"
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_20mdp"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_15mdp"
                    android:text="Get Started"
                    android:textSize="@dimen/_11mdp"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>


</layout>