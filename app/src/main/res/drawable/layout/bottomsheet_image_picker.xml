<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtTitleDialog"
                style="@style/textViewStyleLarge"
                android:gravity="center"
                android:background="@drawable/bg_bottomsheet"
                android:padding="@dimen/_10mdp"
                android:text="@string/select_media"
                android:textColor="@color/buttonTextColor" />

            <LinearLayout
                style="@style/llVerticalMatchWrap"
                android:gravity="start"
                android:background="@color/white"
                android:padding="@dimen/_10mdp">

                <LinearLayout
                    android:id="@+id/llImageCamera"
                    style="@style/llHorizontalMatchWrap"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5mdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        style="@style/imageViewDialog"
                        android:src="@drawable/ic_select_camera"
                         />

                    <TextView
                        style="@style/textViewStyleLarge"
                        android:layout_width="@dimen/_100mdp"
                        android:layout_marginLeft="@dimen/_10mdp"
                        android:padding="@dimen/_5mdp"
                        android:text="@string/camera" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llImageGallery"
                    style="@style/llHorizontalMatchWrap"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5mdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        style="@style/imageViewDialog"
                        android:src="@drawable/ic_select_image"
                         />

                    <TextView
                        style="@style/textViewStyleLarge"
                        android:layout_width="@dimen/_100mdp"
                        android:layout_marginLeft="@dimen/_10mdp"
                        android:padding="@dimen/_5mdp"
                        android:text="@string/gallery" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llImagePDF"
                    style="@style/llHorizontalMatchWrap"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5mdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        style="@style/imageViewDialog"
                        android:src="@drawable/ic_select_pdf"
                         />

                    <TextView
                        style="@style/textViewStyleLarge"
                        android:layout_width="@dimen/_100mdp"
                        android:layout_marginLeft="@dimen/_10mdp"
                        android:padding="@dimen/_5mdp"
                        android:text="@string/document" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

</layout>