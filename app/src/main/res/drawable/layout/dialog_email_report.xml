<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCardBack"
        app:cardElevation="@dimen/_10mdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorCardBack"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTitleDialog"
                    style="@style/textViewStyleLarge"
                    android:layout_height="@dimen/_35mdp"
                    android:background="@color/buttonBgColor"
                    android:gravity="center"
                    android:text="@string/email_report"
                    android:textColor="@color/buttonTextColor" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageViewCancel"
                    android:layout_width="@dimen/_24mdp"
                    android:layout_height="@dimen/_24mdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="@dimen/_8mdp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_close" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llPDF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_5mdp">

                <ImageView
                    style="@style/imageViewDialog"
                    android:src="@drawable/ic_dialog_pdf"
                    app:tint="@color/transparent" />

                <TextView
                    style="@style/textViewStyleLarge"
                    android:layout_marginLeft="@dimen/_5mdp"
                    android:padding="@dimen/_5mdp"
                    android:text="@string/str_pdf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llXLS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_5mdp">

                <ImageView
                    style="@style/imageViewDialog"
                    android:src="@drawable/ic_xls_dialog"
                    app:tint="@color/transparent" />

                <TextView
                    style="@style/textViewStyleLarge"
                    android:layout_marginLeft="@dimen/_5mdp"
                    android:padding="@dimen/_5mdp"
                    android:text="@string/str_xls" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>