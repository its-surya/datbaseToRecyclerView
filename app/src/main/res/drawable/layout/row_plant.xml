<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="String" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5mdp"
            android:layout_marginTop="@dimen/_8mdp"
            android:layout_marginBottom="@dimen/_1mdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_5mdp"
            app:cardElevation="@dimen/_1mdp">

            <LinearLayout
                style="@style/llVerticalMatchWrap"
                android:gravity="top">

                <LinearLayout
                    style="@style/llHorizontalMatchWrap"
                    android:background="@color/headerBackgroundColor">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_60mdp"
                        android:layout_height="@dimen/_60mdp"
                        app:cardCornerRadius="@dimen/_5mdp"
                        android:layout_margin="@dimen/_5mdp"
                        app:cardElevation="@dimen/_1mdp">
                    <ImageView
                        loadImage="@{model}"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                       />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        style="@style/llVerticalMatchWrap"
                        android:layout_margin="@dimen/_5mdp"
                        android:layout_weight="1"
                        android:gravity="top">


                        <LinearLayout
                            style="@style/llHorizontalMatchWrap"
                            android:gravity="center_vertical">
                        <TextView
                            style="@style/headerTextStyle"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:paddingVertical="@dimen/_5mdp"
                            android:text="Anurag 21"
                            android:textStyle="bold" />
                        <ImageView
                            android:id="@+id/imageViewOption"
                            android:layout_width="@dimen/_15mdp"
                            android:layout_height="@dimen/_15mdp"
                            android:layout_gravity="top"
                            android:background="?selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_star_full" />
                        </LinearLayout>
                        <LinearLayout
                            style="@style/llHorizontalMatchWrap"
                            android:layout_weight="1"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="@dimen/_12mdp"
                                android:layout_height="@dimen/_12mdp"
                                isOnline="@{false}"
                                />
                            <TextView
                                style="@style/textViewStyleExtraSmall"
                                android:layout_width="wrap_content"
                                android:maxLines="1"
                                android:layout_marginStart="@dimen/_5mdp"
                                android:hint="Offline" />
                            <ImageView
                                android:layout_width="@dimen/_12mdp"
                                android:layout_height="@dimen/_12mdp"
                                android:layout_marginStart="@dimen/_5mdp"
                                isOnline="@{true}"
                                />
                            <TextView
                                style="@style/textViewStyleExtraSmall"
                                android:layout_width="wrap_content"
                                android:maxLines="1"
                                android:layout_marginStart="@dimen/_5mdp"
                                android:hint="No Alerts" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/llHorizontalMatchWrap"
                            android:layout_marginTop="@dimen/_5mdp"
                            android:gravity="center_vertical">

                            <LinearLayout
                                style="@style/llVerticalMatchWrap"
                                android:layout_weight="1"
                                android:gravity="center_vertical">

                                <TextView
                                    style="@style/textViewStyleExtraSmall"
                                    android:hint="Daily" />

                                <LinearLayout
                                    style="@style/llHorizontalMatchWrap"
                                    android:layout_marginTop="@dimen/_5mdp"
                                    android:gravity="bottom">

                                    <TextView
                                        style="@style/textViewStyleRegular"
                                        android:layout_width="wrap_content"
                                        android:text="31.57" />

                                    <TextView
                                        style="@style/textViewStyleExtraSmall"
                                        android:layout_width="wrap_content"
                                        android:hint="kWh" />
                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                style="@style/llVerticalMatchWrap"
                                android:layout_weight="1"
                                android:gravity="center_vertical">

                                <TextView
                                    style="@style/textViewStyleExtraSmall"
                                    android:hint="Monthly" />

                                <LinearLayout
                                    style="@style/llHorizontalMatchWrap"
                                    android:layout_marginTop="@dimen/_5mdp"
                                    android:gravity="bottom">

                                    <TextView
                                        style="@style/textViewStyleRegular"
                                        android:layout_width="wrap_content"
                                        android:text="31.57" />

                                    <TextView
                                        style="@style/textViewStyleExtraSmall"
                                        android:layout_width="wrap_content"
                                        android:hint="kWh" />
                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                style="@style/llVerticalMatchWrap"
                                android:layout_weight="1"
                                android:gravity="center_vertical">

                                <TextView
                                    style="@style/textViewStyleExtraSmall"
                                    android:hint="Total" />

                                <LinearLayout
                                    style="@style/llHorizontalMatchWrap"
                                    android:layout_marginTop="@dimen/_5mdp"
                                    android:gravity="bottom">

                                    <TextView
                                        style="@style/textViewStyleRegular"
                                        android:layout_width="wrap_content"
                                        android:text="31.57" />

                                    <TextView
                                        style="@style/textViewStyleExtraSmall"
                                        android:layout_width="wrap_content"
                                        android:hint="kWh" />
                                </LinearLayout>

                            </LinearLayout>



                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorDivider" />
                <LinearLayout
                    style="@style/llHorizontalMatchWrap"
                    android:paddingHorizontal="@dimen/_10mdp"
                    android:paddingVertical="@dimen/_5mdp"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="@dimen/_15mdp"
                        android:layout_height="@dimen/_15mdp"
                        android:src="@drawable/ic_calendar"
                        />
                    <TextView
                        style="@style/textViewStyleExtraSmall"
                        android:layout_marginStart="@dimen/_5mdp"
                        android:hint="Last Update: 2021/11/22 07:30:15 UTC+5:30"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
