<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10mdp"
            android:background="@color/colorCardBack"
            app:cardCornerRadius="@dimen/_10mdp"
            app:cardElevation="@dimen/_2mdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorCardBack"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/llVerticalMatchWrap"
                    android:paddingHorizontal="@dimen/_10mdp">

                    <TextView
                        style="@style/textViewStyleLarge"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:gravity="left"
                        android:text="@string/faq_take_photographs"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/textViewStyleRegular"
                        android:layout_marginTop="@dimen/_3mdp"
                        android:gravity="left"
                        android:text="@string/faq1"
                        android:textColor="@color/black" />

                    <TextView
                        style="@style/textViewStyleRegular"
                        android:layout_marginTop="@dimen/_3mdp"
                        android:gravity="left"
                        android:text="@string/faq2"
                        android:textColor="@color/black" />

                    <TextView
                        style="@style/textViewStyleRegular"
                        android:layout_marginTop="@dimen/_3mdp"
                        android:gravity="left"
                        android:text="@string/faq3"
                        android:textColor="@color/black" />

                    <TextView
                        style="@style/textViewStyleRegular"
                        android:layout_marginTop="@dimen/_3mdp"
                        android:gravity="left"
                        android:text="@string/faq4"
                        android:textColor="@color/black" />

                    <TextView
                        style="@style/textViewStyleRegular"
                        android:layout_marginTop="@dimen/_3mdp"
                        android:gravity="left"
                        android:text="@string/faq5"
                        android:textColor="@color/black" />

                    <TextView
                        style="@style/textViewStyleRegular"
                        android:layout_marginTop="@dimen/_3mdp"
                        android:gravity="left"
                        android:text="@string/faq6"
                        android:textColor="@color/black" />

                    <TextView
                        style="@style/textViewStyleRegular"
                        android:layout_marginTop="@dimen/_3mdp"
                        android:gravity="left"
                        android:text="@string/faq7"
                        android:textColor="@color/black" />

                    <TextView
                        style="@style/textViewStyleRegular"
                        android:layout_marginTop="@dimen/_3mdp"
                        android:gravity="left"
                        android:text="@string/faq8"
                        android:textColor="@color/black" />

                    <LinearLayout
                        style="@style/llVerticalMatchWrap"
                        android:layout_margin="@dimen/_5mdp"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnSubmit"
                            style="@style/ButtonStyle"
                            android:layout_width="@dimen/_100mdp"
                            android:layout_height="@dimen/_30mdp"
                            android:text="@string/str_ok" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>