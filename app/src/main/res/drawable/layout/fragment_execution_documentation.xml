<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isOtherTypeOfModule"
            type="Boolean" />

        <variable
            name="isOtherTypeOfInverter"
            type="Boolean" />

        <variable
            name="model"
            type="com.energy.ahasolar.dataservice.model.response.ExecutionDocumentationResponse.ExecutionDocumentationData" />
    </data>

    <LinearLayout style="@style/llVerticalMatchMatch">

        <androidx.core.widget.NestedScrollView
            style="@style/llVerticalMatchMatch"
            android:layout_weight="1">

            <LinearLayout
                style="@style/llVerticalMatchMatch"
                android:padding="@dimen/_15mdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10mdp"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_8mdp">

                    <LinearLayout
                        style="@style/llEditText"
                        android:layout_margin="@dimen/_10mdp"
                        android:visibility="visible">

                        <LinearLayout
                            style="@style/llHorizontalMatchWrap"
                            android:layout_marginTop="@dimen/_5mdp">

                            <TextView
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/name_of_applicant"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/edtNameOfApplicant"
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@{model.nameOfApplicant.empty?`-`:model.nameOfApplicant}"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/llHorizontalMatchWrap"
                            android:layout_marginTop="@dimen/_5mdp">

                            <TextView
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/consumer_no"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/edtConsumerNo"
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@{model.consumerno}"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/llHorizontalMatchWrap"
                            android:layout_marginTop="@dimen/_5mdp">

                            <TextView
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/project_name"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/edtProjectName"
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@{model.projectName.empty?`-`:model.projectName}"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/llHorizontalMatchWrap"
                            android:layout_marginTop="@dimen/_5mdp">

                            <TextView
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/hint_address"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/edtLocation"
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@{model.address}"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/llHorizontalMatchWrap"
                            android:layout_marginTop="@dimen/_5mdp">

                            <TextView
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/str_capacity_kw"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/edtCapacityKw"
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@{``+model.capacity}"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/llHorizontalMatchWrap"
                            android:layout_marginTop="@dimen/_5mdp">

                            <TextView
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/str_contact_no"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/edtContactNo"
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@{``+model.contact}"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/llHorizontalMatchWrap"
                            android:layout_marginTop="@dimen/_5mdp">

                            <TextView
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/total_cost_of_installation"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/edtTotalCostOfInstallation"
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@{``+model.totalCostInstallation}"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/llHorizontalMatchWrap"
                            android:layout_marginTop="@dimen/_5mdp">

                            <TextView
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/amount_of_state_subsidy"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/edtAmountOfStateSubsidy"
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@{model.amountOfStateSubsidy.empty?`-`:model.amountOfStateSubsidy}"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/llHorizontalMatchWrap"
                            android:layout_marginTop="@dimen/_5mdp">

                            <TextView
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/amount_of_mnre_subsidy"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/edtAmountOfMNRESubsidy"
                                style="@style/textViewStyleRegular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@{model.amountOfMnreSubsidy.empty?`-`:model.amountOfMnreSubsidy}"
                                android:textColor="@color/black" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10mdp"
                    android:background="@color/white"
                    android:elevation="@dimen/_3mdp"
                    app:cardCornerRadius="@dimen/_8mdp">

                    <LinearLayout
                        style="@style/llVerticalMatchWrap"
                        android:layout_margin="@dimen/_10mdp">

                        <LinearLayout style="@style/llHorizontalMatchWrap">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/textInputLayoutStyle"
                                android:layout_marginEnd="@dimen/_3mdp"
                                android:layout_weight="1"
                                android:hint="@string/start_date"
                                app:endIconDrawable="@drawable/ic_calendar"
                                app:endIconMode="custom">

                                <EditText
                                    android:id="@+id/edtStartDate"
                                    style="@style/edtStyle"
                                    android:clickable="true"
                                    android:focusable="false"
                                    android:gravity="center_vertical"
                                    android:text="@{model.isStartdate()}" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/textInputLayoutStyle"
                                android:layout_marginStart="@dimen/_3mdp"
                                android:layout_weight="1"
                                android:hint="@string/end_date"
                                app:endIconDrawable="@drawable/ic_calendar"
                                app:endIconMode="custom">

                                <EditText
                                    android:id="@+id/edtEndDate"
                                    style="@style/edtStyle"
                                    android:clickable="true"
                                    android:focusable="false"
                                    android:gravity="center_vertical"
                                    android:text="@{model.isEnddate()}" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputLayoutStyle"
                            android:hint="@string/date_of_bi_directional_meter_installation"
                            app:endIconDrawable="@drawable/ic_calendar"
                            app:endIconMode="custom">

                            <EditText
                                android:id="@+id/edtDateOfBiDirectionalMeterInstallation"
                                style="@style/edtStyle"
                                android:clickable="true"
                                android:focusable="false"
                                android:text="@{model.biDate}"
                                android:gravity="center_vertical" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <LinearLayout style="@style/llHorizontalMatchWrap">

                            <LinearLayout
                                style="@style/llVerticalMatchWrap"
                                android:layout_weight="1">

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/textInputLayoutStyle"
                                    android:hint="@string/latitude">

                                    <EditText
                                        android:id="@+id/edtLatitude"
                                        style="@style/edtStyleNumeric"
                                        android:gravity="center_vertical"
                                        android:imeOptions="actionNext"
                                        android:inputType="numberDecimal"
                                        android:text="@{model.latitude}" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>

                            <LinearLayout
                                style="@style/llVerticalMatchWrap"
                                android:layout_marginStart="@dimen/_10mdp"
                                android:layout_weight="1">

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/textInputLayoutStyle"
                                    android:hint="@string/longitude">

                                    <EditText
                                        android:id="@+id/edtLongitude"
                                        style="@style/edtStyleNumeric"
                                        android:gravity="center_vertical"
                                        android:imeOptions="actionNext"
                                        android:inputType="numberDecimal"
                                        android:text="@{model.longitude}" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/imgGetAddress"
                                android:layout_width="@dimen/_30mdp"
                                android:layout_height="@dimen/_30mdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_10mdp"
                                android:padding="@dimen/_5mdp"
                                android:src="@drawable/ic_location_small" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginVertical="@dimen/_10mdp"
                    app:cardCornerRadius="@dimen/_8mdp">

                    <LinearLayout
                        style="@style/llVerticalMatchWrap"
                        android:gravity="top">

                        <TextView
                            style="@style/headerTextStyle"
                            android:background="@color/headerBackgroundColor"
                            android:paddingHorizontal="@dimen/_10mdp"
                            android:paddingVertical="@dimen/_8mdp"
                            android:text="@string/bi_directional_meter_details"
                            android:textColor="@color/black" />


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputLayoutStyle"
                            android:layout_marginHorizontal="@dimen/_10mdp"
                            android:hint="@string/bi_directional_meter_manufacture_name">

                            <EditText
                                android:id="@+id/edtBiDirectionalMeterManufactureName"
                                style="@style/edtStyle"
                                android:gravity="center_vertical"
                                android:imeOptions="actionNext"
                                android:text="@{model.meterManufacture}"
                                />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputLayoutStyle"
                            android:layout_marginHorizontal="@dimen/_10mdp"
                            android:layout_marginBottom="@dimen/_10mdp"
                            android:hint="@string/bi_directional_meter_serial_no">

                            <EditText
                                android:id="@+id/edtBiDirectionalMeterSerialNo"
                                style="@style/edtStyle"
                                android:gravity="center_vertical"
                                android:imeOptions="actionNext"
                                android:text="@{model.meterSerialNo}"
                                />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginVertical="@dimen/_10mdp"
                    app:cardCornerRadius="@dimen/_8mdp">

                    <LinearLayout
                        style="@style/llVerticalMatchWrap"
                        android:gravity="top">

                        <TextView
                            style="@style/headerTextStyle"
                            android:background="@color/headerBackgroundColor"
                            android:paddingHorizontal="@dimen/_10mdp"
                            android:paddingVertical="@dimen/_8mdp"
                            android:text="@string/solar_meter_details"
                            android:textColor="@color/black" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputLayoutStyle"
                            android:layout_marginHorizontal="@dimen/_10mdp"
                            android:hint="@string/solar_meter_manufacture_name">

                            <EditText
                                android:id="@+id/edtSolarMeterManufactureName"
                                style="@style/edtStyle"
                                android:gravity="center_vertical"
                                android:imeOptions="actionNext"
                                android:text="@{model.solarMeterManufacture}"
                                />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputLayoutStyle"
                            android:layout_marginHorizontal="@dimen/_10mdp"
                            android:layout_marginBottom="@dimen/_10mdp"
                            android:hint="@string/solar_meter_serial_no">

                            <EditText
                                android:id="@+id/edtSolarMeterSerialNo"
                                style="@style/edtStyle"
                                android:gravity="center_vertical"
                                android:imeOptions="actionNext"
                                android:text="@{model.solarMeterSerialNo}"
                                />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginVertical="@dimen/_10mdp"
                    app:cardCornerRadius="@dimen/_8mdp">

                    <LinearLayout
                        style="@style/llVerticalMatchWrap"
                        android:gravity="top">

                        <TextView
                            style="@style/headerTextStyle"
                            android:background="@color/headerBackgroundColor"
                            android:paddingHorizontal="@dimen/_10mdp"
                            android:paddingVertical="@dimen/_8mdp"
                            android:text="@string/pv_modules"
                            android:textColor="@color/black" />


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputLayoutStyle"
                            android:layout_marginHorizontal="@dimen/_10mdp"
                            app:endIconMode="custom"
                            app:endIconDrawable="@drawable/ic_drop_down"
                            android:hint="@string/str_type_of_module">

                            <EditText
                                android:id="@+id/edtSelectTypeOfModules"
                                style="@style/edtStyle"
                                android:clickable="true"
                                android:focusable="false"
                                android:imeOptions="actionNext" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputLayoutStyle"
                            setVisibility="@{isOtherTypeOfModule}"
                            android:layout_marginHorizontal="@dimen/_10mdp"
                            android:hint="@string/other_type_of_module">

                            <EditText
                                android:id="@+id/edtOtherTypeOfModules"
                                style="@style/edtStyle"
                                android:gravity="center_vertical"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:text="@{model.mTypeOther}"
                                />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputLayoutStyle"
                            android:layout_marginHorizontal="@dimen/_10mdp"
                            android:layout_marginBottom="@dimen/_10mdp"
                            android:hint="@string/cumulative_capacity_of_pv_modules_kw">

                            <EditText
                                android:id="@+id/edtCumulativeCapacityOfPvModules"
                                style="@style/edtStyleNumeric"
                                android:enabled="false"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                 />
                        </com.google.android.material.textfield.TextInputLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewPvModulesInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5mdp"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:layout_marginBottom="@dimen/_10mdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_8mdp"
                            app:cardElevation="@dimen/_1mdp">

                            <LinearLayout style="@style/llVerticalMatchWrap">

                                <LinearLayout
                                    style="@style/llHorizontalMatchWrap"
                                    android:background="@color/headerBackgroundColor">

                                    <TextView
                                        style="@style/headerTextStyle"
                                        android:layout_weight="1"
                                        android:maxLines="1"
                                        android:paddingVertical="@dimen/_8mdp"
                                        android:paddingStart="@dimen/_10mdp"
                                        android:text="@string/upload_pdf_image" />

                                    <ImageView
                                        android:id="@+id/imgAddDocumentForPvModules"
                                        android:layout_width="@dimen/_30mdp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_vertical"
                                        android:background="?selectableItemBackgroundBorderless"
                                        android:padding="@dimen/_5mdp"
                                        android:src="@drawable/ic_add" />
                                </LinearLayout>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerViewPvModulesDocument"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                    tools:listitem="@layout/row_media_item" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginVertical="@dimen/_10mdp"
                    app:cardCornerRadius="@dimen/_8mdp">

                    <LinearLayout
                        style="@style/llVerticalMatchWrap"
                        android:gravity="top">

                        <TextView
                            style="@style/headerTextStyle"
                            android:background="@color/headerBackgroundColor"
                            android:paddingHorizontal="@dimen/_10mdp"
                            android:paddingVertical="@dimen/_8mdp"
                            android:text="@string/inverters"
                            android:textColor="@color/black" />


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputLayoutStyle"
                            android:layout_marginHorizontal="@dimen/_10mdp"
                            android:hint="@string/str_type_of_inverters"
                            app:endIconDrawable="@drawable/ic_drop_down"
                            app:endIconMode="custom">

                            <EditText
                                android:id="@+id/edtSelectTypeOfInverter"
                                style="@style/edtStyle"
                                android:clickable="true"
                                android:focusable="false"
                                android:gravity="center_vertical"
                                android:imeOptions="actionNext"
                                />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputLayoutStyle"
                            setVisibility="@{isOtherTypeOfInverter}"
                            android:layout_marginHorizontal="@dimen/_10mdp"
                            android:hint="@string/other_type_of_module">

                            <EditText
                                android:id="@+id/edtOtherTypeOfInverter"
                                style="@style/edtStyle"
                                android:gravity="center_vertical"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:text="@{model.iTypeOther}"
                                />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputLayoutStyle"
                            android:layout_marginHorizontal="@dimen/_10mdp"
                            android:hint="@string/select_type_of_phase"
                            app:endIconDrawable="@drawable/ic_drop_down"
                            app:endIconMode="custom">

                            <EditText
                                android:id="@+id/edtSelectTypeOfPhase"
                                style="@style/edtStyle"
                                android:clickable="true"
                                android:focusable="false"
                                />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputLayoutStyle"
                            android:layout_marginHorizontal="@dimen/_10mdp"
                            android:layout_marginBottom="@dimen/_10mdp"
                            android:hint="@string/capacity_kw_power_of_pcu_inverters_kva">

                            <EditText
                                android:id="@+id/edtCapacityKWOrPowerOfPCUOrInverterskVA"
                                style="@style/edtStyleNumeric"
                                android:gravity="center_vertical"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                />

                        </com.google.android.material.textfield.TextInputLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewInvertersInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5mdp"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:layout_marginBottom="@dimen/_10mdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_8mdp"
                            app:cardElevation="@dimen/_1mdp">

                            <LinearLayout style="@style/llVerticalMatchWrap">

                                <LinearLayout
                                    style="@style/llHorizontalMatchWrap"
                                    android:background="@color/headerBackgroundColor">

                                    <TextView
                                        style="@style/headerTextStyle"
                                        android:layout_weight="1"
                                        android:maxLines="1"
                                        android:paddingVertical="@dimen/_8mdp"
                                        android:paddingStart="@dimen/_10mdp"
                                        android:text="@string/upload_pdf_image" />

                                    <ImageView
                                        android:id="@+id/imgAddDocumentForInverter"
                                        android:layout_width="@dimen/_30mdp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_vertical"
                                        android:background="?selectableItemBackgroundBorderless"
                                        android:padding="@dimen/_5mdp"
                                        android:src="@drawable/ic_add" />
                                </LinearLayout>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerViewInvertersDocument"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                    tools:listitem="@layout/row_media_item" />


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_marginBottom="@dimen/_1mdp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1mdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_8mdp"
                        app:cardElevation="@dimen/_1mdp">

                        <LinearLayout
                            android:id="@+id/llOtherBarcode"
                            style="@style/llHorizontalMatchWrap"
                            android:background="@color/headerBackgroundColor"
                            android:gravity="top">

                            <TextView
                                style="@style/headerTextStyle"
                                android:layout_weight="1"
                                android:padding="@dimen/_10mdp"
                                android:text="@string/str_other_sr_no" />

                            <ImageView
                                android:layout_width="@dimen/_25mdp"
                                android:layout_height="@dimen/_25mdp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_arrow_right"
                                app:tint="#808080" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginVertical="@dimen/_10mdp"
                    app:cardCornerRadius="@dimen/_8mdp">

                    <LinearLayout
                        style="@style/llVerticalMatchWrap"
                        android:gravity="top">

                        <TextView
                            style="@style/headerTextStyle"
                            android:background="@color/headerBackgroundColor"
                            android:paddingHorizontal="@dimen/_10mdp"
                            android:paddingVertical="@dimen/_8mdp"
                            android:text="Grid"
                            android:textColor="@color/black" />


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputLayoutStyle"
                            android:visibility="gone"
                            android:layout_marginHorizontal="@dimen/_10mdp"
                            android:hint="@string/connectivity_level">

                            <EditText
                                android:id="@+id/edtConnectivityLevel"
                                style="@style/edtStyleNumeric"
                                android:gravity="center_vertical"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:text="@{model.connectivityLevel}" />
                        </com.google.android.material.textfield.TextInputLayout>




                        <LinearLayout
                            style="@style/llVerticalMatchWrap"
                            android:layout_marginHorizontal="@dimen/_10mdp"
                            android:layout_marginTop="@dimen/_10mdp">

                            <TextView
                                style="@style/textViewStyleRegular"
                                android:gravity="left"
                                android:hint="@string/connectivity_level_phase"
                                android:textColor="@color/black" />


                            <LinearLayout
                                style="@style/llHorizontalMatchWrap"
                                android:layout_marginTop="@dimen/_5mdp"
                                android:gravity="center">

                                <RadioGroup
                                    android:id="@+id/rgVoltagePhase"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatRadioButton
                                        android:id="@+id/radio3Phase"
                                        style="@style/myRadioButton"
                                        android:checked="@{model.connectivityLevelPhase.equals(`3`)?true:false}"
                                        android:text="3ph." />

                                    <androidx.appcompat.widget.AppCompatRadioButton
                                        android:id="@+id/radio1Phase"
                                        style="@style/myRadioButton"
                                        android:layout_marginLeft="@dimen/_15mdp"
                                        android:checked="@{model.connectivityLevelPhase.equals(`1`)?true:false}"
                                        android:text="1ph." />
                                </RadioGroup>
                            </LinearLayout>

                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputLayoutStyle"
                            android:layout_marginHorizontal="@dimen/_10mdp"
                            android:hint="@string/connectivity_level_voltage">

                            <EditText
                                android:id="@+id/edtGridConnectivityVoltage"
                                style="@style/edtStyleNumeric"
                                android:enabled="false"
                                android:text="@{model.connectivityLevelPhase.equals(`3`)?`415V`:`230V`}" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5mdp"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:layout_marginBottom="@dimen/_10mdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_8mdp"
                            app:cardElevation="@dimen/_1mdp">

                            <LinearLayout style="@style/llVerticalMatchWrap">

                                <LinearLayout
                                    style="@style/llHorizontalMatchWrap"
                                    android:background="@color/headerBackgroundColor">

                                    <TextView
                                        style="@style/headerTextStyle"
                                        android:layout_weight="1"
                                        android:maxLines="1"
                                        android:paddingVertical="@dimen/_8mdp"
                                        android:paddingStart="@dimen/_10mdp"
                                        android:text="@string/upload_pdf_image" />

                                    <ImageView
                                        android:id="@+id/imgAddDocumentForGrid"
                                        android:layout_width="@dimen/_30mdp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_vertical"
                                        android:background="?selectableItemBackgroundBorderless"
                                        android:padding="@dimen/_5mdp"
                                        android:src="@drawable/ic_add" />
                                </LinearLayout>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerViewGridDocument"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                    tools:listitem="@layout/row_media_item" />


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            style="@style/ButtonStyle"
            android:layout_width="@dimen/_150mdp"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/_5mdp"
            android:text="@string/str_save" />
    </LinearLayout>
</layout>
